{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "collection",
  "description": "Detailed collection representation",
  "properties": {
    "_id": { "type": "string" },
    "name": { "type": "string" },
    "description": { "type": "string" },
    "modified": {
      "type": "string",
      "description": "ISO 8601 Date Time String"
    },
    "images": {
      "type": "array",
      "items": {
        "$ref": "image.json"
      }
    }
  },
  "required": ["_id"],
  "additionalProperties": false
}
